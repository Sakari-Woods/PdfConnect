<Window x:Class="PdfServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Start Server" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Server_Start"/>
        <ProgressBar x:Name ="ServerStatusIndicator" HorizontalAlignment="Left" Height="20" Margin="90,10,0,0" VerticalAlignment="Top" Width="20"/>
        <Button Content="Stop Server" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75" Click="Server_Stop"/>
        <Label x:Name="serverIP" Content="Server IP:" HorizontalAlignment="Left" Margin="115,10,0,0" FontSize="10" Padding="0,3,0,0" VerticalAlignment="Top" Height="20"/>
        <TextBlock x:Name="outputLog"  HorizontalAlignment="Left" Margin="10,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="227" Width="542"/>

    </Grid>
</Window>
